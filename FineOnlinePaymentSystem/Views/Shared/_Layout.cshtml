<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fine Online Payment System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    @*<link href="~/toastr.js/toastr.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fine Online Payment System</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("SuperAdmin"))
                            {
                                <li class="nav-item">
                                    @*<a class="nav-link text-dark" asp-area="" asp-controller="Offenders" asp-action="Index">Offenders</a>*@
                                </li>
                                <li class="nav-item dropdown text-dark">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Offenders</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Offenders" asp-action="Create">Add Offenders</a>
                                        <a class="dropdown-item" asp-controller="Offenders" asp-action="Index">View Offenders</a>
                                        @*<a class="dropdown-item" href="#">Link 3</a>*@
                                    </div>
                                </li>
                                <li class="nav-item dropdown text-dark">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Cases</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Cases" asp-action="Index">View Cases</a>
                                        @*<a class="dropdown-item" asp-controller="Offenders" asp-action="Index">View Offenders</a>*@
                                        @*<a class="dropdown-item" href="#">Link 3</a>*@
                                    </div>
                                </li>
                                <li class="nav-item dropdown text-dark">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Administrative Tasks</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/RegisterAdministrator">Add Administrator</a>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Add Officers</a>
                                        @*<a class="dropdown-item" href="#">Link 3</a>*@
                                    </div>
                                </li>
                            }
                            else if (User.IsInRole("Officer"))
                            {
                                <li class="nav-item dropdown text-dark">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Offenders</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Cases" asp-action="Index">View Cases</a>
                                        @*<a class="dropdown-item" asp-controller="Offenders" asp-action="Index">View Offenders</a>*@
                                        @*<a class="dropdown-item" href="#">Link 3</a>*@
                                    </div>
                                </li>
                                <li class="nav-item dropdown text-dark">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Cases</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Cases" asp-action="Create">Create Case</a>
                                        <a class="dropdown-item" asp-controller="Cases" asp-action="Index">View Cases</a>
                                        @*<a class="dropdown-item" href="#">Link 3</a>*@
                                    </div>
                                </li>
                                <li class="nav-item dropdown text-dark">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Fines</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Fine" asp-action="CreateFine">Create Fines</a>
                                        <a class="dropdown-item" asp-controller="Fine" asp-action="Index">View Fines</a>
                                        @*<a class="dropdown-item" href="#">View Cases</a>*@
                                        @*<a class="dropdown-item" href="#">Link 3</a>*@
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown text-dark">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Fine Payment</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">View Fines</a>
                                        <a class="dropdown-item" href="#">Pay Fine</a>
                                        @*<a class="dropdown-item" href="#">Link 3</a>*@
                                    </div>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="position: absolute; top: 0; right: 0;">
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="7000">
            <div class="toast-header">
                <img src="" class="rounded mr-2" alt="...">
                <strong class="mr-auto">@ViewBag.MessageType</strong>
                <small>just now</small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                @ViewBag.Message
            </div>
        </div>
    </div>


    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2020 - Fine Online Payment System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/bootstrap-notify/js/bootstrap-notify.min.js"></script>
    @*<script src="~/toastr.js/toastr.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script src="~/notify.js/notify.min.js"></script>*@
    @RenderSection("Scripts", required: false)
</body>
</html>
