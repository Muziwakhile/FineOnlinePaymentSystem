@{
    ViewData["Title"] = "Home Page";
}
<!-- start carousel -->
<div class="container-fluid">
    <div id="demo" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="offset-lg-0" src="~/images/depositphotos_252260494-stock-photo-dark-backgrounded-close-handcuffed-man.jpg" alt="Los Angeles" width="1877" height="500">
                <div class="carousel-caption">
                    <h3>Has your loved one been arrested?</h3>
                    <p>Follow up on your loved ones case online</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="offset-lg-0" src="~/images/depositphotos_7637782-stock-photo-gavel-and-handcuffs.jpg" alt="Chicago" width="1877" height="500">
                <div class="carousel-caption">
                    <h3>Has Your Relative been fined?</h3>
                    <p>Get more details about the fine by registering online as a relative and searching for your relatives case</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="offset-lg-0" src="~/images/metal-handcuffs-laptop-keyboard-black-43038011.jpg" alt="New York" width="1877" height="500">
                <div class="carousel-caption">
                    <h3>Online Fine Payment</h3>
                    <p>Now you can pay online for you relative and get them home quickly</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev " href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
</div>


<!--End Carousel-->
