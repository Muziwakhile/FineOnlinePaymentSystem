                        <span asp-validation-for="AmortizationAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AmountPayable" class="control-label"></label>
                        <input asp-for="AmountPayable" class="form-control" readonly />
