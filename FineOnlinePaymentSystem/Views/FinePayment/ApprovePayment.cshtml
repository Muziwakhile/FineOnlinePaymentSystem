@model FineOnlinePaymentSystem.Models.FinePayment

@{
    ViewData["Title"] = "ApprovePayment";
}


<h4>ApprovePayment</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="ApprovePayment" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="FinePaymentID" />
                    <input type="hidden" asp-for="AmortizationID" />
                    <input type="hidden" asp-for="RelativeID" />
