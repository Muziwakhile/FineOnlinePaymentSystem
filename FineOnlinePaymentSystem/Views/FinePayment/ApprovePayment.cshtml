                    </div>
                    <div class="form-group">
                        <label class="control-label">Surity/Relative Name</label>
                        <input asp-for="Relative.Name" class="form-control" readonly />
                        <span asp-validation-for="Relative.Name" class="text-danger"></span>
                    </div>


