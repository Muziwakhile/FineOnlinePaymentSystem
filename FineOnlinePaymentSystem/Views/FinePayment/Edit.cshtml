@model FineOnlinePaymentSystem.Models.FinePayment
@*@{
        ViewData["Title"] = "Edit";
    }*@


    <div style="position: absolute; top: 0; right: 0; margin-top:70px">
        <div class="toast" id="toast1" role="alert" aria-live="assertive" aria-atomic="true" data-delay="7000">
            <div class="toast-header">
                <img src="" class="rounded mr-2" alt="...">
                <strong class="mr-auto">@ViewBag.MessageType</strong>
                <small>just now</small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                @ViewBag.Message
            </div>
        </div>
    </div>
<h4>Pay Fine For relative</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="FinePaymentID" />
                    <input type="hidden" asp-for="RelativeID" />
                    <input type="hidden" asp-for="FineID" />
                    <input type="hidden" asp-for="AmortizationID" />


                    <input type="hidden" asp-for="Amortization.DaysOverstayed" />
                    <input type="hidden" asp-for="Amortization.Percent" />
                    <input type="hidden" asp-for="Amortization.AmortizationAmount" />
                    <input type="hidden" asp-for="Amortization.CaseID" />
                    <input type="hidden" asp-for="Amortization.FineID" />
                    <input type="hidden" asp-for="Amortization.AmortizationAmountPerDay" />

                    <div class="form-group">
                        <label class="control-label">Offender Name</label>
                        <input asp-for="Fine.Offender.Name" class="form-control" readonly />
                        <span asp-validation-for="Fine.Offender.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Fine Amount</label>
                        <input asp-for="Fine.Amount" class="form-control" readonly />
                        <span asp-validation-for="Fine.Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AmortizationAmount" class="control-label"></label>
                        <input asp-for="AmortizationAmount" class="form-control" readonly />
                        <span asp-validation-for="AmortizationAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AmountPayable" class="control-label"></label>
                        <input asp-for="AmountPayable" class="form-control" readonly />
                        <span asp-validation-for="AmountPayable" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Surity/Relative Name</label>
                        <input asp-for="Relative.Name" class="form-control" readonly />
                        <span asp-validation-for="Relative.Name" class="text-danger"></span>
                    </div>


                    @*<div class="form-group">
                        <label asp-for="AmortizationID" class="control-label"></label>
                        <select asp-for="AmortizationID" class="form-control" asp-items="ViewBag.AmortizationID"></select>
                        <span asp-validation-for="AmortizationID" class="text-danger"></span>
                    </div>*@

                    @*<div class="form-group">
                        <label asp-for="FineID" class="control-label"></label>
                        <select asp-for="FineID" class="form-control" asp-items="ViewBag.FineID"></select>
                        <span asp-validation-for="FineID" class="text-danger"></span>
                    </div>*@
                    @*<div class="form-group">
                        <label asp-for="FinePaymentStatusID" class="control-label"></label>
                        <select asp-for="FinePaymentStatusID" class="form-control" asp-items="ViewBag.FinePaymentStatusID"></select>
                        <span asp-validation-for="FinePaymentStatusID" class="text-danger"></span>
                    </div>*@
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>


                <div class="col-md-4">

                    <div class="form-group">
                        <label asp-for="Fine.Case.CaseNumber" class="control-label"></label>
                        <input asp-for="Fine.Case.CaseNumber" class="form-control" readonly />
                        <span asp-validation-for="Fine.Case.CaseNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Fine.Case.CaseDescription" class="control-label"></label>
                        <textarea rows="4" asp-for="Fine.Case.CaseDescription" class="form-control" readonly></textarea>
                        <span asp-validation-for="Fine.Case.CaseDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Amortization Per Day</label>
                        <input asp-for="Amortization.AmortizationAmountPerDay" class="form-control" readonly />
                        <span asp-validation-for="Amortization.AmortizationAmountPerDay" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Release Date</label>
                        <input asp-for="Fine.ReleaseDate" class="form-control" readonly />
                        <span asp-validation-for="Fine.ReleaseDate" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="FineID" class="control-label"></label>
                        <select asp-for="FineID" class="form-control" asp-items="ViewBag.FineID"></select>
                        <span asp-validation-for="FineID" class="text-danger"></span>
                    </div>*@
                    @*<div class="form-group">
                        <label asp-for="FinePaymentStatusID" class="control-label"></label>
                        <select asp-for="FinePaymentStatusID" class="form-control" asp-items="ViewBag.FinePaymentStatusID"></select>
                        <span asp-validation-for="FinePaymentStatusID" class="text-danger"></span>
                    </div>*@

                </div>
                <div class="col-md-4">
                    @if (Model.FinePaymentID > 0)
                    {
                        <div class="form-group">
                            <label asp-for="Attachment" class="control-label"></label>
                            <div class="col-md-offset-2 col-md-10">
                                <embed src="@Url.Action("RetrieveImage","FinePayment",new { id = Model.FinePaymentID})" class="img-thumbnail" alt="Car Image" style="height:300px; width:500px;" type="application/pdf" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <label asp-for="Attachment" class="control-label"></label>
                            <div class="col-md-offset-2 col-md-10">
                                <embed id="d" class="img-thumbnail" alt="Car Image" style="height:300px; width:500px;" type="application/pdf" />
                            </div>
                        </div>
                    }

                    <div class="form-group">
                        <label class="control-label">Attach Proof of pament</label>

                        <input id="img" type="file" asp-for="Attachment" accept="application/pdf" class="form-control " multiple />
                        <span asp-validation-for="Attachment" class="text-danger"></span>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">

            $(".toast").toast('show')

        </script>
    }

    <script type="text/javascript">

        $(document).ready(function () {


            $('#img').change(function () {

                var file = this.files;
                var formdata = new FormData();

                formdata.append("attachment", file[0]);

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("RetrieveImage2","FinePayment")',
                    data: formdata,
                    contentType: false,
                    processData: false,
                    success: function () {
                        var attachment = '@Url.Action("RetrieveImage3", "FinePayment")'
                        $("#d").attr('src', attachment)
                    },
                    error: function () {
                        alert("Error occured")
                    }
                })
            })
        })

    </script>


}
